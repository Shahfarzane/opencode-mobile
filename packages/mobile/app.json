{
  "expo": {
    "name": "OpenChamber",
    "slug": "openchamber",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "openchamber",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#100F0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.openchamber.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "OpenChamber needs camera access to scan QR codes for server pairing",
        "NSFaceIDUsageDescription": "OpenChamber uses Face ID to secure your authentication tokens",
        "NSLocalNetworkUsageDescription": "OpenChamber discovers local OpenCode servers on your network",
        "NSBonjourServices": [
          "_openchamber._tcp",
          "_http._tcp"
        ],
        "LSSupportsOpeningDocumentsInPlace": true,
        "UIFileSharingEnabled": true
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "dev.openchamber.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#100F0F"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CHANGE_WIFI_MULTICAST_STATE",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow OpenChamber to access your camera to scan QR codes"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow OpenChamber to use Face ID for secure authentication"
        }
      ],
      [
        "expo-file-system",
        {
          "supportsOpeningDocumentsInPlace": true,
          "enableFileSharing": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "07df2a39-5d04-4265-a2b3-543f7224df34"
      }
    },
    "owner": "heynerdceo"
  }
}
